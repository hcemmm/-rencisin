<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_margin="5dp"
        app:cardCornerRadius="4dp"
        android:id="@+id/cv_duzenle">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Düzenle"
            android:textColor="@android:color/black"
            android:textSize="25sp"
            android:drawableStart="@drawable/ic_baseline_edit_24"
            android:paddingStart="10dp"
            android:drawablePadding="10dp"
            android:padding="5dp"
            android:drawableLeft="@drawable/exo_edit_mode_logo"
            android:paddingLeft="10dp" />



    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_margin="5dp"
        app:cardCornerRadius="4dp"
        android:id="@+id/cv_gizlilik">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gizlilik"
            android:textColor="@android:color/black"
            android:textSize="25sp"
            android:drawableStart="@drawable/ic_baseline_kilitli"
            android:paddingStart="10dp"
            android:drawablePadding="10dp"
            android:padding="5dp"
            android:drawableLeft="@drawable/ic_baseline_kilitli"
            android:paddingLeft="10dp" />



    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_margin="5dp"
        app:cardCornerRadius="4dp"
        android:id="@+id/cv_cikisyap">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Çıkış Yap"
            android:textColor="@android:color/black"
            android:textSize="25sp"
            android:drawableStart="@drawable/ic_baseline_cikislogo"
            android:paddingStart="10dp"
            android:drawablePadding="10dp"
            android:padding="5dp"
            android:drawableLeft="@drawable/ic_baseline_cikislogo"
            android:paddingLeft="10dp" />



    </androidx.cardview.widget.CardView>


</LinearLayout>